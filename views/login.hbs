<section class="section-intro">
  <h2 class="main-heading">Entra en tu cuenta</h2>
</section>

<div class="form-container-users">
  <form class="user-form" action="/auth/login" method="POST">
    <div class="form-grup">
      <label for="username" class="hidden-label">Username</label>
      {{#if formData.length}}
      <input type="text" id="username" name="username" placeholder="Username" class="form-input"
        value="{{formData.[0]}}">
      {{else}}
      <input type="text" id="username" name="username" placeholder="Username" class="form-input">
      {{#if messages.length}}
      <ul class="validation">
        {{#each messages}}<li>{{this}}</li>{{/each}}
      </ul>
      {{/if}}
      {{/if}}
    </div>
    <div class="form-grup">
      <label class="hidden-label" for="password">Password</label>
      <input type="text" id="password" name="password" placeholder="Password" class="form-input">
      {{#if messages.length}}
      <ul class="validation">
        {{#each messages}}<li>{{this}}</li>{{/each}}
      </ul>
      {{/if}}
    </div>
    <button type="submit" class="btn-filled">Login</button>
  </form>
</div>