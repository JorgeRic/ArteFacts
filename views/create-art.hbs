<section class="section-intro">
  <h2 class="main-heading">Subir arte</h2>
</section>

<div class="form-container-art">
  <form class="art-form" action="/arts/create-art" method="POST" enctype="multipart/form-data">
    <label for="author"><input type="text" name="author" placeholder="Tu nombre" required></label>
    <label for="title"><input class="input-art-title" type="text" name="title"
        placeholder="Título o descripción de la obra" required></label>
    <label for="contact"><input type="text" name="contact" placeholder="Contacto" required></label>
    <label class="form-label" for="art-type">Selecciona el tipo de arte</label>
    <select id="art-type" name="artType" required>
      <option value="Pintura">Pintura</option>
      <option value="Fotografía">Fotografía</option>
      <option value="Escultura">Escultura</option>
      <option value="Ilustración">Ilustración</option>
      <option value="Collage">Collage</option>
    </select>

    <label for="image"><input class="input-attatch" type="file" name="image"
        placeholder="Sube la imagen de la obra"><span class="btn-outlined">Subir imagen</span></label>
    <button type="submit" class="btn-filled">Subir arte</button>
  </form>
</div>