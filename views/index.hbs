<section class="section-intro">
  <h2 class="main-heading">{{title}}</h2>
  <p class="main-subtitle">{{subtitle}}</p>
</section>

<section class="art-list">
  {{#each arts}}
  <article class="card">
    <img class="card-image" src="{{image}}">
    <form class="favorites-form" action="/arts/{{_id}}/favorite-art" method="POST">
      {{#if ../currentUser}}
      <button class="favorites-btn" type="submit"><img class="favorites-btn-icon" src="/images/heart-empty-icon.svg"
          alt="Añadir a favoritos icon">Añadir a favoritos</button>
      {{/if}}
    </form>
  </article>
  {{/each}}
</section>

