<div class="form-container">
  <p class="form-description">Login</p>
  <form action="/auth/login" method="POST">
    <div class="form-grup">
      <label for="username" class="form-label">Username</label>
      {{#if formData.length}}
        <input type="text" id="username" name="username" placeholder="Username" class="form-input" value="{{formData.[0]}}">
      {{else}}
        <input type="text" id="username" name="username" placeholder="Username" class="form-input">
        {{#if messages.length}}
          <ul class="validation">
            {{#each messages}}<li>{{this}}</li>{{/each}}
          </ul>
        {{/if}}
      {{/if}}
    </div>
    <div class="form-grup">
      <label for="password" class="form-label">Password</label>
      <input type="text" id="password" name="password" placeholder="Password" class="form-input">
      {{#if messages.length}}
        <ul class="validation">
          {{#each messages}}<li>{{this}}</li>{{/each}}
        </ul>
      {{/if}}
    </div>
    <button type="submit" class="btn">Login</button>
  </form>
</div>


