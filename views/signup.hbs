<section class="section-intro">
  <h2 class="main-heading">Regístrate y artefacta</h2>
</section>

<div class="form-container-users">
  <form class="user-form" action="/auth/signup" method="POST">

    <label for="username" class="hidden-label">Tu nombre</label>
    {{#if formData.length}}
    <input type="text" name="username" id="username" placeholder="Tu nombre" value="{{formData.[0]}}">
    {{else}}
    <input type="text" name="username" id="username" placeholder="Tu nombre">
    {{#if messages.length}}
    <ul class="validation">
      {{#each messages}}<li>{{this}}</li>{{/each}}
    </ul>
    {{/if}}
    {{/if}}

    <label for="password" class="hidden-label">Contraseña</label>
    <input type="password" name="password" id="password" placeholder="Contraseña">
    {{#if messages.length}}
    <ul class="validation">
      {{#each messages}}<li>{{this}}</li>{{/each}}
    </ul>
    {{/if}}

    <button type="submit" class="btn-filled">Regístrate</button>
  </form>
</div>