<div class="form-container">
  <p class="form-description">Login</p>
  <form action="/auth/login" method="POST">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" name="username" placeholder="Username" class="form-input" required>
    <label for="password" class="form-label">Password</label>
    <input type="text" id="password" name="password" placeholder="Password" class="form-input" required>
    <button type="submit" class="btn">Login</button>
  </form>
</div>